@model IEnumerable<Tecnico>
  @{
  Layout = "_Layout";
  ViewData["Title"] = "Técnicos";
  }

  <div class="mt-3" style="margin-left: 95%; position: static; display: inline-block;">
    <a class="btn btn-primary" asp-controller="Tecnicos" asp-action="Criar">Novo</a>
  </div>
  <div class="card card-body mt-2">
    @if(@Model.Any()){
    <h3 class="card-title"><em class="fas fa-headset"></em> @ViewData["Title"]</h3>
    <ul class="list-group">
      @foreach(var item in Model){
      <a asp-action="Editar" asp-route-id="@item.Id">
        <li class="list-group-item">
          @item.Nome
        </li>
      </a>
      }
    </ul>
    }else{
    <h3 class="card-body alert-primary">Nenhum técnico cadastrado!</h3>
    }
  </div>