@model HelpViewModel
@{
ViewData["Title"] = "Detalhes do Help";
}
<div class="form-group mt-1">
  <a class="btn btn-secondary" asp-action="Index"><i class="fas fa-arrow-left"></i> Voltar</a>
</div>
<div class="card card-body">
  <div class="card-title">
    <h4 class="font-weight-bold">Help - @Model.Situacao</h4>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Tipo de Problema: @Model.TipoDeProblema</li>
    <li class="list-group-item">Setor: @Model.Setor</li>
    <li class="list-group-item">Telefone: @Model.Telefone</li>
    <li class="list-group-item">@Model.Descricao</li>
  </ul>

  <div class="float-right">
    <div class="row">
      <div class="form-group">
        @if(Model.Situacao == Situacao.AguardandoAtendimento)
        {
    <button class="btn btn-primary" data-toggle="modal" data-target="#atender">Atender</button>
        }
      </div>
      @if(Model.Situacao == Situacao.EmAtendimento)
      {
      <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Finalizar</button>
      }
    </div>
  </div>
</div>
@if(Model.Situacao == Situacao.Finalizado)
{
<div class="card card-body mt-2">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <h4 class="font-weight-bold">Solução</h4>
      <p>@Model.Solucao</p>
    </li>
    <li class="list-group-item">Início do Atendimento: @Model.InicioDoAtendimento</li>
    <li class="list-group-item">Fim do Atendimento: @Model.FimDoAtendimento</li>

  </ul>
</div>
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Observações</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="col-12" asp-action="Finalizar">
          <input name="id" hidden value="@Model.Id">
          <span class="text-danger" asp-validation-for="Solucao"></span>
          <textarea class="form-control" asp-for="Solucao" placeholder="Informe o que foi feito" rows="3"
            required></textarea>
          <br>
          <select asp-items="@ViewBag.Tecnicos"></select>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="atender" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Observações</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="col-12" asp-action="Atender">
          <input name="id" hidden value="@Model.Id">
          <select asp-items="@ViewBag.Tecnicos"></select>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary">Salvar</button>
        </form>
      </div>
    </div>
  </div>
</div>