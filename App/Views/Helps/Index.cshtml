@model IEnumerable<Help>
  @{
  Layout = "_Layout";
  ViewData["Title"] = "Helps";
  }

  <div class="card card-body mt-0 mt-5">
  @if(@Model.Any()){
    <h3 class="card-title"><em class="fas fa-hands-helping"></em> @ViewData["Title"]</h3>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Registro</th>
            <th>Setor</th>
            <th>Tipo</th>
            <th>Situação</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var item in Model){
          <tr onclick="window.location='Helps/Detalhes/@item.Id';">
            <td>@item.DataDeRegistro</td>
            <td>@item.Setor</td>
            <td>@item.Tipo</td>
            <td>@item.Situacao.ToString("F")</td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  }else{
  <h3 class="card-body alert-primary">Nenhum help cadastrado!</h3>
  }
  </div>

  @section Scripts{
  <script>

  </script>
  }