@model LoginViewModel
@{
Layout = "_LayoutPublic";
ViewData["Title"] = "Login";
}
<div class="container col-md-4">
    <div class="card card-body shadow-sm mt-5">
        <div class="card-title">
            <div class="h3 text-center">@ViewData["Title"]</div>
        </div>
        <form asp-controller="Autenticacao" asp-action="Acessar">
            <div class="form-group">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fas fa-user text-primary"></i></span>
                    <input asp-for="Nome" type="text" class="form-control" placeholder="UsuÃ¡rio">
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock text-primary"></i></span>
                        <input type="password" class="form-control" asp-for="Senha" placeholder="Senha">
                    </div>
                </div>
            </div>
            <div class="botoes-login">
                <button asp-action="Index" asp-controller="Home" class="btn btn-secondary" type="submit"
                    style="width: 100px;">Sair</button>
                <button class="btn btn-primary" type="submit" style="width: 100px;">Acessar</button>
            </div>
        </form>
    </div>
</div>