<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Observações</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="col-12" asp-action="Finalizar">
          <input name="id" hidden value="@Model.Id">
          @* <span class="text-danger" asp-validation-for="Solucao"></span> *@
          <textarea class="form-control" name="solucao" value="@Model.Solucao" placeholder="Informe o que foi feito"
            rows="3" required></textarea>
          <div class="modal-footer">
            <button type="button" class="btn btn-link btn-sm" data-dismiss="modal">Cancelar</button>
            <button class="btn btn-primary btn-sm">Salvar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>