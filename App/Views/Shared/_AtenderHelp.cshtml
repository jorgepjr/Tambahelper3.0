@if(Model.Situacao == Situacao.AguardandoAtendimento){

<div class="modal fade" id="atender" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Selecione um t√©cnico</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="col-12" asp-action="Atender">
                    <input hidden name="id" value="@Model.Id">
                    <select class="form-control" name="tecnicoId" value="id" asp-items="@ViewBag.Tecnicos"></select>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-link btn-sm" data-dismiss="modal">Cancelar</button>
                        <button class="btn btn-primary btn-sm">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
}